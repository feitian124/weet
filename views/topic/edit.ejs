<div class="am-g am-g-fixed am-g-collapse">
  <div class="am-u-sm-12">
    <div>
      <ol class="am-breadcrumb">
        <li><a href="/topic">社区</a></li>
        <li class="am-active">编辑贴子</li>
      </ol>
    </div>

    <form class="am-form" action='/topic/update' method='post'>
      <input type="hidden" name="id" value="<%= topic.id %>"/>
      <p><input type="text" class="am-form-field am-radius" name="title" value="<%= topic.title %>"/></p>

        <div class="am-form-group">
          <label for="new_topic">内容</label>
          <textarea class="" rows="5" name="content" value="<%= topic.content %>"></textarea>
        </div>

        <p><button type="submit" class="am-btn am-btn-primary">提交</button></p>
    </form>
  </div>
</div>

